{
    "connection": {
        "type": {
            "default": "QRadar",
            "displayName": "IBMÂ® QRadar"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "default": 443,
            "type": "number"
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-qradar.html",
            "type": "link"
        },
        "cert": {
            "type": "password",
            "optional": true
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "proxy": {
            "type" : "fields",
            "url": {
                "type": "text",
                "optional": true
            },
            "auth": {
                "type": "password",
                "optional": true
            },
            "x_forward_proxy": {
                "type": "text",
                "optional": true
            },
            "x_forward_proxy_auth": {
                "type": "password",
                "optional": true
            }
        },
        "data_lake": {
            "type": "boolean",
            "default": false
        },
        "options": {
            "validate_pattern": {
                "default": false,
                "hidden": true
            },
            "hash_options": {
                "optional": true,
                "hidden": true
            }
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "sec": {
                "type": "password",
                "previous": "configuration.auth.SEC"
            }
        }
    }
}