{
    "connection": {
        "type": {
            "default": "guardium"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "default": 8443,
            "type": "number"
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-elastic.html",
            "type": "link"
        },
        "limit": {
            "default": 1000,
            "max": 10000,
            "type": "number"
        },
        "timeout": {
            "default": 1,
            "max": 60,
            "type": "number"
        },
        "concurrent": {
            "default": 4,
            "max": 60,
            "type": "number"
        },
        "cert": {
            "type": "password",
            "optional": true
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "options": {
            "client_id": {
                "type": "string",
                "optional": true,
                "hidden": true
            },
            "client_secret": {
                "type": "password",
                "optional": true,
                "hidden": true
            },
            "grant_type": {
                "type": "string",
                "optional": true,
                "hidden": true
            }
        } 
    },
    "configuration": {
        "auth": {
            "username": {
                "type": "password"
            },
            "password": {
                "type": "password"
            }
          },
          "logLevel": {
            "type": "text",
             "default": "debug"
            }
    }
}
