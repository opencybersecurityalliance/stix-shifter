{
    "connection": {
        "type": {
            "displayName": "Microsoft Defender for Endpoint",
            "group": "azure"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$|^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
        },
        "port": {
            "default": 443,
            "type": "number",
            "min": 1,
            "max": 65535
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.6.0/platform/docs/scp-core/data-sources.html",
            "type": "link"
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "options": {
          "includeAlerts": {
            "type": "boolean",
            "default": false
          },
          "includeHostOs": {
            "type": "boolean",
            "default": false
          },
          "includeNetworkInfo": {
            "type": "boolean",
            "default": false
          },
          "retainOriginal": {
            "type": "boolean",
            "default": false
          }
        }
    },
    "configuration": {
        "auth": {
            "type": "fields",
            "tenant": {
                "type": "password"
            },
            "clientId": {
                "type": "password"
            },
            "clientSecret": {
                "type": "password"
            }
        }
    }
}