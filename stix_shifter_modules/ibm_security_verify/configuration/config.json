{
    "connection": {
        "type": {
            "displayName": "IBM Security Verify",
            "type": "connectorType"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "type": "number",
            "default": 443,
            "min": 1,
            "max": 65535
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "certificate",
            "optional": true
        }
    },
    "configuration": {
        "auth": {
            "type": "fields",
            "clientId": {
                "type": "certificate"
            },
            "clientSecret": {
                "type": "certificate"
            }
        }
    }
}