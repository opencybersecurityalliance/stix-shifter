{
    "connection": {
        "type": {
            "default": "carbonblack",
            "displayName": "Carbon Black Response"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "default": 443,
            "type": "number"
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-carbon-black.html",
            "type": "link"
        },
        "cert": {
            "type": "password",
            "optional": true
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "options": {
            "validate_pattern": {
                "default": false
            }
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "token": {
                "type": "password"
            }
        }
    }
}