{
    "connection": {
        "type": {
            "displayName": "Alertflex",
            "group": "alertflex"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$|^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
        },
        "port": {
            "default": 8181,
            "type": "number",
            "min": 1,
            "max": 65535
        },
        "help": {
            "default": "https://alertflex.github.io/doc/pages/integration.html",
            "type": "link"
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "username": {
                "type": "text"
            },
            "password": {
                "type": "password"
            }
        }
    }
}
