{
    "connection": {
        "type": {
            "displayName": "Alertflex"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "default": 8181,
            "type": "number",
            "min": 1,
            "max": 65535
        },
        "help": {
            "default": "https://alertflex.github.io/doc/pages/integration.html",
            "type": "link"
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "certificate",
            "optional": true
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "username": {
                "type": "certificate"
            },
            "password": {
                "type": "certificate"
            }
        }
    }
}
