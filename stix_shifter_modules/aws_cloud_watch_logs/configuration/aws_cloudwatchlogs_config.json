{
    "connection": {
        "type": {
            "default": "aws_cloud_watch_logs"
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-aws.html",
            "type": "link"
        },
        "limit": {
            "default": 1000,
            "max": 10000,
            "type": "number"
        },
        "timeout": {
            "default": 1,
            "max": 60,
            "type": "number"
        },
        "options": {
            "region": {
                "type": "text"
            },
            "log_group_names": {
                "type": "text"
            }
        }
    },
    "configuration": {
        "type": {
            "default": "aws_cloud_watch_logs"
        },
        "aws_access_key_id": {
            "type": "password"
        },
        "aws_iam_role": {
            "type": "password",
            "optional": true
        },
        "aws_secret_access_key": {
            "type": "password"
        }
    }
}