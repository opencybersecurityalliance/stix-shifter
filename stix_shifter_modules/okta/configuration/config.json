{
    "connection": {
        "type": {
            "displayName": "Okta",
            "group": "okta"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "help": {
            "type": "link",
            "default": "data-sources.html"
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "api_token": {
                "type": "password"
            }
        }
    }
}