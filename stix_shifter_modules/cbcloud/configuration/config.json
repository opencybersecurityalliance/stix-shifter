{
    "connection": {
        "type": {
            "displayName": "Carbon Black Cloud"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "type": "number",
            "default": 443
        },
        "help": {
            "type": "link",
            "default": "https://dummy.example/"
        },
        "sslVerify": {
            "regex": "^([tT]rue|[fF]alse)$",
            "type": "text",
            "default": "True"
        }
    },
    "configuration": {
        "type" : "fields",
        "auth": {
            "orgkey": {
                "type": "text"
            },
            "token": {
                "type": "password"
            }
        }
    }
}