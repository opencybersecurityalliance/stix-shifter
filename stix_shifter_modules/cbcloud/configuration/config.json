{
    "connection": {
        "type": {
            "displayName": "Carbon Black Cloud"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "type": "number",
            "default": 443
        },
        "help": {
            "type": "link",
            "default": "https://add.a.link.to.the.carbonblackcloud/connector/documentation.html"
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        }
    },
    "configuration": {
        "type" : "fields",
        "auth": {
            "org_key": {
                "type": "password"
            },
            "token": {
                "type": "password"
            }
        }
    }
}