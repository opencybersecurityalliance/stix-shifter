{
    "connection": {
        "type": {
            "displayName": "STIX Bundle"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "type": "number",
            "default": 443
        },
        "help": {
            "type": "link",
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-stix.html"
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "username": {
                "type": "password",
                "optional": true
            },
            "password": {
                "type": "password",
                "optional": true
            }
        }
    }
}