{
    "connection": {
        "type": {
            "displayName": "Splunk",
            "group": "splunk"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "type": "number",
            "default": 443,
            "min": 1,
            "max": 65535
        },
        "help": {
            "type": "link",
            "default": "data-sources-splunk.html"
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
	"options": {
            "index": {
                "type": "text",
                "optional": true
	    }
	}
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "username": {
                "type": "password"
            },
            "password": {
                "type": "password"
            }
        }
    }
}
