{
    "connection": {
        "type": {
            "displayName": "Microsoft Graph Security",
            "group": "microsoft"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$|^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$",
            "default": "graph.microsoft.com"
        },
        "port": {
            "type": "number",
            "default": 443,
            "min": 1,
            "max": 65535
        },
        "login_host": {
            "type": "text",
            "default": "login.microsoftonline.com"
        },
        "help": {
            "type": "link",
            "default": "data-sources-sentinel.html"
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "options": {
            "alert": {
                "type": "boolean",
                "default": true
            },
            "alertV2": {
                "type": "boolean",
                "default": false
            }
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "tenant": {
                "type": "password"
            },
            "clientId": {
                "type": "password"
            },
            "clientSecret": {
                "type": "password"
            },
            "access_token": {
                "type": "password",
                "hidden": true,
                "optional": true
            }
        }
    }
}