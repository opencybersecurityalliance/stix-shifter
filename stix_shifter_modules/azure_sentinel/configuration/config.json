{
    "connection": {
        "type": {
            "displayName": "Microsoft Graph Security",
            "group": "microsoft"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$",
            "default": "graph.microsoft.com"
        },
        "port": {
            "type": "number",
            "default": 443,
            "min": 1,
            "max": 65535
        },
        "help": {
            "type": "link",
            "default": "data-sources-sentinel.html"
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "options": {
            "alert": {
                "type": "boolean",
                "default": false
            },
            "alertV2": {
                "type": "boolean",
                "default": false
            },
            "alert_resources": {
                "type": "dropdown",
                "default": "alerts",
                "options": ["alerts", "alerts_v2" ]
            }
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "tenant": {
                "type": "password"
            },
            "clientId": {
                "type": "password"
            },
            "clientSecret": {
                "type": "password"
            },
            "access_token": {
                "type": "password",
                "hidden": true,
                "optional": true
            }
        }
    }
}