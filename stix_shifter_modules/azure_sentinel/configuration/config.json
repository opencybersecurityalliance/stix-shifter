{
    "connection": {
        "type": {
            "displayName": "Microsoft Graph Security",
            "group": "microsoft"
        },
        "port": {
            "type": "number",
            "default": 443,
            "min": 1,
            "max": 65535
        },
        "help": {
            "type": "link",
            "default": "data-sources-sentinel.html"
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "options": {
            "alert": {
                "type": "boolean",
                "default": false
            },
            "alertV2": {
                "type": "boolean",
                "default": false
            }
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "tenant": {
                "type": "password"
            },
            "clientId": {
                "type": "password"
            },
            "clientSecret": {
                "type": "password"
            },
            "access_token": {
                "type": "password",
                "hidden": true,
                "optional": true
            }
        }
    }
}