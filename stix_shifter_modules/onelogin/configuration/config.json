{
    "connection": {
        "type": {
            "displayName": "OneLogin"
        },
        "region": {
            "type": "text",
            "default": "us"
        },
        "help": {
            "type": "link",
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.6.0/platform/docs/scp-core/data-sources.html"
        },
        "options": {
            "result_limit": {
                "default": 1000,
                "min": 1,
                "max": 60000,
                "type": "number",
                "previous": "connection.resultSizeLimit"
            }
        }
    },
    "configuration": {
        "auth": {
            "type" : "fields",
            "clientId": {
                "type": "password"
            },
            "clientSecret": {
                "type": "password"
            }
        }
    }
}